{
    "compilerOptions": {
      "outDir": "dist",
      "lib": ["dom", "ES6"],
      "sourceMap": true,
      "strictNullChecks": true,
      "declaration": true,
      "declarationMap": true,
      "declarationDir": "./types",
      "target": "ES6",
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
    },
    "include": [
      "src/**/*.ts",
      "test/**/*.ts"
    ],
    "exclude": ["node_modules"]
  }
